<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/et_wordname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#363A43"
            android:hint="@string/enter_word_name"
            android:textSize="22sp"
            tools:text="" />

        <EditText
            android:id="@+id/et_wordType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="#363A43"
            android:hint="@string/enter_word_type"
            android:textSize="22sp"
            tools:text="" />



        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:background="#D0D0D0"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/photo_preview"/>



        <EditText
            android:id="@+id/et_exampleSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="18sp"
            android:hint="@string/enter_an_example_sentences"
            tools:text=""
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_uploadAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/teal_200"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="18sp"
            android:hint="Choose an audio"
            tools:text=""
            android:textStyle="bold"/>


        <Button
            android:id="@+id/btn_addWord"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Add to list"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>
</ScrollView>
